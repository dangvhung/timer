{
	"manifest_version": 2,

	"name": "Tomato",
	"description": "Một tiện ích giúp bạn phân chia thời gian giữa nghỉ ngơi và làm việc một cách hiệu quả",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Tomato: Your Pomodoro Timer"
	},
	"background": {
		"scripts": ["pomodoroState.js", "breakState.js", "moment.js", "background.js"],
		"persistent": false
	},
	"permissions": [
		"notifications"
	]
}